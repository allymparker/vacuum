app "nvim" {
    config {
        cd "nvim" {
            file "init.vim" [exists -> install-linux]
        }
    }
    local {
        cd "nvim" {
            file "init.vim" [exists -> install-windows]
        }
    }
}

dependencies {
    install-linux {
        pacman -S neovim
    }

    install-windows {
        scoop install neovim
    }
}